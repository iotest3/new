<metal:block use-macro="main_template">

   <metal:content fill-slot="content">
        
        <header>
            ${panel('status_message')}
            <h1>Messages</h1>
        </header>

  		<div class="chatter-messages-users portlet">
  			<div class="find-user">
  				<form id="chatter-find-user" class="form-stacked" action="#" method="GET">
            		<div class="control-group">
              			<div class="controls">
                			<input type="text" name="term" id="chatter-message-user" data-source="${chatter_url}search_profiles.json"/>
              			</div>
            		</div>
          		</form>
  			</div>
  			<div class="user-item" tal:repeat="user latest_messages_users">
  				<div class="user-item-avatar">
          	<a href="${user['creator_url']}">
            	<img class="avatar" alt="${user['creator_fullname']}" src="${user['creator_image_url']}" />
          	</a>
        	</div>
        	<div class="user-item-content">
          	<a href="#" ref="${user['creator']}">${user['creator_fullname']}</a>, 
          	<span class="timeago"
           			  title="${user['timeago']}">${user['timeago']}</span>
          	<div class="summary">${user['summary']}</div>
          </div>
  			</div>
  		</div>

  		<div class="chatter-messages">
        <div class="message-item${' other-user' if not message['is_current_user'] else ''}" tal:repeat="message user_messages">
          <div class="message-item-avatar">
            <a href="${message['user_url']}">
              <img class="avatar" alt="${message['user_fullname']}" src="${message['user_image_url']}" />
            </a>
          </div>
          <div class="message-item-content">
            <a href="#" ref="${message['user']}">${message['user_fullname']}</a>, 
            <span class="timeago"
                  title="${message['timeago']}">${message['timeago']}</span>
            <div class="content">${message['html']}</div>
          </div>
        </div>
      </div>

    	<div metal:use-macro="layout.macros['rss_icon']"/>


    </metal:content>
</metal:block>
