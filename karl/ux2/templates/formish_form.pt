<metal:page use-macro="main_template">

  <!-- TEMPORARY -->
  <metal:tail fill-slot="head_slot">
    <meta id="karl-app-url" content="${layout.app_url}"/>
    <meta id="karl-here-url" content="${layout.here_url}"/>
    <meta id="karl-static-url" content="${layout.static('')}"/>
  </metal:tail>
  <!-- TEMPORARY -->


  <div metal:fill-slot="content">
    
    <header>
      ${panel('status_message')}
      ${panel('error_message')}
      ${panel('actions')}
      <h1>${layout.page_title}</h1>
    </header>

    <p tal:content="page_description|''"/>
    <div tal:condition="blurb|False" tal:replace="blurb"/>
    <span tal:replace="structure request.form()" />
  </div>
 
</metal:page>
