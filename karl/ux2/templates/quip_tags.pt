<section class="portlet sectionRelated" id="quip_search">
  <div>
    <h3>Search for topic</h3>
    <form class="form-vertical" action="">
      <div class="control-group">
        <div class="controls">
            <label class="text" for="show-only-tag">
            <input id="show-only-tag" class="input input-xlarge" type="text"
                   name="${layout.here_url}tag.html?tag=" />
            </label>
            <button class="btn" type="submit">Search</button>
        </div>
      </div>
    </form>
  </div>
  <div>
    <h3>Recent topics</h3>
    <div tal:repeat="tag tag_list">
      <a href="${layout.here_url}tag.html?tag=${tag}">${tag}</a>
      <a class="btn btn-small" tal:condition="not tag in followed_tags" href="${chatter_url}add_followed_tags.html?add=${tag}">Follow</a>
      <a class="btn btn-small" tal:condition="tag in followed_tags" href="${chatter_url}remove_followed_tags.html?remove=${tag}">Unfollow</a>
      <br />
    </div>
  </div>
  <div>
    <h3>Followed topics</h3>
    <div tal:repeat="tag followed_tags">
      <a href="${layout.here_url}tag.html?tag=${tag}">${tag}</a>
      <a class="btn btn-small" tal:condition="tag in followed_tags" href="${chatter_url}remove_followed_tags.html?remove=${tag}">Unfollow</a><br />
    </div>
  </div>
  <script language="javascript" type="text/javascript">
    //<![CDATA[
    $(document).ready(function() {
        $('.searchButton').click(function(e) {
          $('#chatter-quips').load($('#show-only-tag').attr('name') + $('#show-only-tag').attr('value') + ' #chatter-quips');
          return false;
          $(".timeago").timeago();
        });
    });
    //]]>
  </script>
</section>
