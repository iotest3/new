<div xmlns="http://www.w3.org/1999/xhtml" 
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal" class="clearafter">

  <div id="left">
    <span tal:replace="structure current_intranet.navigation"/>
  </div>

  <div id="center" class="center_intranet">
    <div id="screenid-office-view" class="ccontent ui-helper-clearfix">
      <span tal:replace="structure feature"/>
      <div class="visualClear"> </div>
      <span tal:replace="structure middle_portlet_html"/>
    </div>
  </div>

  <div id="right">
      <div class="generic-portlet">
        <h3>STYLE SWITCHER</h3>
        <select id="style-switcher" style="width: 100%;">
          <option value="" selected="selected">Reskin</option>
          <option value="test1">Test 1</option>
        </select>
        <script type="text/javascript">
          $(document).ready(function() {
            $("select#style-switcher").change( function() {
              var $target = $('body');
              $target.removeClass();
              $target.addClass(this.value);
            });
          });
        </script>
      </div>
      <span tal:replace="structure right_portlet_html"/>
  </div>

</div>
