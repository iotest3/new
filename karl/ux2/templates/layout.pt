<!doctype html>
<!--[if lt IE 7]>
<html class="no-js ie6 oldie" lang="en"> <![endif]-->
    <!--[if IE 7]>
    <html class="no-js ie7 oldie" lang="en"> <![endif]-->
    <!--[if IE 8]>
    <html class="no-js ie8 oldie" lang="en"> <![endif]-->
    <!--[if gt IE 8]><!-->
    <html class="no-js" lang="en"> <!--<![endif]-->
    <head>
        <meta charset="utf-8"/>

        <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" /> -->

        <metal:titleslot metal:define-slot="title_slot">
            <title tal:content="page_title|layout.page_title">Sample Title</title>
        </metal:titleslot>

        <!-- Mobile viewport optimized: j.mp/bplateviewport -->
        <meta name="viewport"
              content="width=device-width,initial-scale=1" />

        <link rel="icon" href="${layout.static('ux2/img/favicon.ico')}" type="image/x-icon"/>
        <link rel="shortcut icon" href="${layout.static('ux2/img/favicon.ico')}" type="image/x-icon"/>

        <link rel="stylesheet" href="${layout.static('ux2/css/main.css')}" />
        <!--[if lt IE 9]>
        <link rel="stylesheet" href="${layout.static('ux2/css/ie.css')}" />
        <![endif]-->

        <script src="${layout.static('ux2/js/jquery-1.7.1.min.js')}"></script>
        <script src="${layout.static('ux2/js/modernizr-2.0.6.min.js')}"></script>
        <script src="${layout.static('ux2/js/respond.min.js')}"></script>
        <script src="${layout.static('ux2/js/ios-orientationchange-fix.js')}"></script>

    
        <!-- extras from layout manager -->
        ${panel('extra_css_head')}
        ${panel('extra_js_head')}
        ${panel('extra_head')}

        <metal:headslot metal:define-slot="head_slot"/>
    </head>
    <body class="${'noSectionMenu' if layout.section_style == 'none' else ''}">

    <!-- Site-wide notification -->
    ${panel('site_announcement')}

    <div id="top-bar">
        <div class="container">
            ${panel('global_logo')}
            ${panel('global_nav')}
            ${panel('personal_tools')}
            ${panel('search')}
        </div>
    </div>

    <div class="sectionContainer" tal:condition="exists:context_tools">
        <div class="container">
            <tal:section_style switch="layout.section_style|'full'">
                <tal:no_section case="'none'"></tal:no_section>
                <section tal:case="'compact'">
                    ${panel('context_tools', context_tools)}
                </section>
                <section tal:case="'full'">
                    <header>
                        <h2>${layout.section_title}</h2>
                    </header>
                    ${panel('context_tools', context_tools)}
                </section>
            </tal:section_style>
        </div>
    </div>

    <div class="contentWrapper ${'' if layout.show_sidebar else 'singleColumn'}">
        <section class="main">
            <metal:content define-slot="content"/>
        </section>

        <aside
                class="column ${'shiftMe' if layout.section_style == 'none' else ''}"
               tal:condition="layout.show_sidebar">
            ${panel('column_one')}
        </aside>
    </div>

    <!-- Footer -->
    ${panel('footer')}

    <script src="${layout.static('ux2/js/jquery.ui.widget.js')}"
            type="text/javascript" defer></script>
    <script src="${layout.static('ux2/js/mustache-0.3.0.js')}"
            type="text/javascript" defer></script>


    <!--[if (gte IE 6)&(lte IE 8)]>
    <script src="${layout.static('ux2/js/jquery-extra-selectors.min.js')}"
            type="text/javascript"></script>
    <script type="text/javascript"
            src="${layout.static('ux2/js/selectivizr-min.js')}"></script>
    <![endif]-->

    <script type="text/javascript" defer>
        window.head_data = ${structure: layout.head_data_json};
    </script>

    <script src="${layout.static('ux2/js/jquery-ui-1.9m5.min.js')}" defer></script>
    <link rel="stylesheet" href="${layout.static('ux2/js/jquery-ui-1.9m5-smoothness.min.css')}" type="text/css" />
    <script src="${layout.static('ux2/plugins/popper-livesearch/bc-core/jquery.cookie.js')}" type="text/javascript" defer></script>
    <script src="${layout.static('ux2/plugins/popper-livesearch/bc-core/jquery.ajaxmanager-3.0.7.js')}" type="text/javascript" defer></script>
    <script src="${layout.static('ux2/plugins/popper-livesearch/bc-core/jquery.caret-1.0.2.min.js')}" type="text/javascript" defer></script>
    <script src="${layout.static('ux2/plugins/popper-livesearch/bc-core/jquery.timeago-0.9.3.js')}" type="text/javascript" defer></script>
    <script src="${layout.static('ux2/plugins/popper-livesearch/popper.livesearch.js')}" type="text/javascript" defer></script>
    <link rel="stylesheet" href="${layout.static('ux2/plugins/popper-livesearch/popper.livesearch.css')}" type="text/css" />
    <script src="${layout.static('ux2/plugins/popper-tagbox/popper.tagbox.js')}" type="text/javascript" defer></script>

    <link rel="stylesheet" href="${layout.static('ux2/plugins/popper-pushdown/popper.pushdown.css')}" type="text/css" />
    <script src="${layout.static('ux2/plugins/popper-pushdown/popper.pushdown.js')}" type="text/javascript" defer></script>

    <!-- pushdown-min.js concatenates pushdown.js and bootstrap-dropdown.js -->
    <script src="${layout.static('ux2/js/pushdown-min.js')}"
            type="text/javascript" defer></script>
    <script src="${layout.static('ux2/js/popper.js')}"
            type="text/javascript" defer></script>

    <!-- bootstrap-modal.js -->
    <script src="${layout.static('ux2/js/bootstrap-modal.js')}"
            type="text/javascript" defer></script>

    <!-- extras from layout manager -->
    ${panel('extra_css')}
    ${panel('extra_js')}

    <script language="javascript" type="text/javascript">
      //<![CDATA[
      $(document).ready(function() {
        $("abbr.timeago").timeago();
      });
      //]]>
    </script>
 
    <metal:tailslot metal:define-slot="tail_slot"/>

    </body>
</html>
