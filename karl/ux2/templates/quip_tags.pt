<section class="portlet sectionRelated" id="quip_search">
  <div>
    <h3>Search for tag</h3>
    <form class="form-stacked" action="">
      <div class="control-group clearfix">
        <div class="controls">
            <label class="text" for="show-only-tag">
            <input id="show-only-tag" class="noborder" type="text"
                   name="${layout.here_url}tag.html?tag=" />
            </label>
            <button class="searchButton" type="submit">Search</button>
        </div>
      </div>
    </form>
  </div>
  <div>
    <h3>Recent tags</h3>
    <div tal:repeat="tag tag_list">
      <a href="${layout.here_url}tag.html?tag=${tag}">${tag}</a><br />
    </div>
  </div>
  <script language="javascript" type="text/javascript">
    //<![CDATA[
    $(document).ready(function() {
        $('.searchButton').click(function(e) {
          $('#chatter-quips').load($('#show-only-tag').attr('name') + $('#show-only-tag').attr('value') + ' #chatter-quips');
          return false;
        });
    });
    //]]>
  </script>
</section>
