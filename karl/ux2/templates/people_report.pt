<metal:block use-macro="main_template">

    <metal:content fill-slot="content">

    ${panel('status_message')}
    ${panel('popper.actions_menu', actions=actions)}
    <header>
        <h1>${context.title}</h1>
    </header>

    <div class="contentText">

        ${panel('popper.grid_header', letters=letters, formats=formats, actions=report_actions)}

        <table class="filtered sortable" id="peopledir" summary="">
            <thead>
                <tr>
                    <!-- Anchors within TH are required in .sortable -->
                    <th><a href="#" class="selected ascending">Name</a></th>
                    <th><a href="#">Department</a></th>
                    <th><a href="#">Position</a></th>
                    <th><a href="#">Phone</a></th>
                </tr>
            </thead>
            <tbody>
                <tr class="ui-grid-row ${repeat['person'].odd and 'odd' or 'even'}" tal:repeat="person batch['entries']">
                    <td>
                        <div>
                            <a href="${request.resource_url(person)}">${person.title}</a>
                        </div>
                    </td>
                    <td>
                        <div>
                            ${person.department}
                        </div>
                    </td>
                    <td>
                        <div>
                            ${person.position}
                        </div>
                    </td>
                    <td>
                        <div>
                            ${person.phone}
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        ${panel('popper.grid_footer', batch=batch)}

    </div>

    <div metal:use-macro="layout.macros['rss_icon']"/>

    </metal:content>
</metal:block>
